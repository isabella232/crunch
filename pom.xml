            <exclude>**/resources/*.csv</exclude>
            <exclude>**/goal.txt</exclude>
            <exclude>**/target/generated-test-sources/**</exclude>
            <exclude>**/scripts/scrunch</exclude>
            <exclude>cloudera/**</exclude>
